<%- include('../partials/_header') %>
<h2> <%= title %> </h2>
<form id="product-form">
   <input name="name" placeholder="Nome do produto" />
  <input type="number" name="price" placeholder="Preço do produto" />
  <input name="description" placeholder="Descrição Produto" />
  <div>
    <a href="/admin/products/" class="button button-outline">Voltar</a>
    <button type="submit">Cadastrar</button>
  </div>
</form>
<script>
  function sendDataForm(event) {
    console.log(event);
    event.preventDefault();
    const formData = new FormData(event.target);
    const formDataJSON = Object.fromEntries(formData);

    fetch("/api/products", {
      method: "POST",
      headers: {
        "content-type": "application/json",
      },
      body: JSON.stringify(formDataJSON),
    })
    .then((response) => {
        if (response.ok) {
          return response.json()
        }

        throw new Error(response.statusText)
      })
      .then((result) => {
        swal("Criado com sucesso!", "Produto Criado", "success");
      })
      .catch((error) => {
        swal("Erro!", "Produto não criado.", "error")
        .then(() => {
          swal(`Error: {${error}}`);
        });
      });
  }

  document
    .getElementById("product-form")
    .addEventListener("submit", sendDataForm);
</script>
<%- include('../partials/_footer') %>
