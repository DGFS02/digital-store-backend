<%- include('./partials/_header') %>
<h2>Registro De Usu√°rio</h2>
<form id="register-form">
  <input type="text" pattern="[a-z\s]+$" name="userName"  placeholder="Nome Completo" required />
  <input name="userEmail" placeholder="E-mail" required/>
  <input type="password" name="userPassword" placeholder="Senha" required/>
  <select name="role">
    <option value="user">Cliente</option>
    <option value="adm" selected>Administrador</option>
  </select>
    <div>
    <button type="submit">Cadastrar</button>
  </div>
</form>
<script>
  function sendDataForm(event) {
    console.log(event);
    event.preventDefault();
    const formData = new FormData(event.target);
    const formDataJSON = Object.fromEntries(formData);

    fetch("/api/register", {
      method: "POST",
      headers: {
        "content-type": "application/json",
      },
      body: JSON.stringify(formDataJSON),
    })
      .then((response) => response.json())
      .then((result) => {
        console.log("Success:", result);
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  }
  document
    .getElementById("register-form")
    .addEventListener("submit", sendDataForm);
</script>
